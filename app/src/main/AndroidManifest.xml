<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.colorsunited.cucompanion">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">

        <!-- Splash screen -->
        <activity
            android:name="com.colorsunited.cucompanion.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Main activity -->
        <activity
            android:name="com.colorsunited.cucompanion.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name="com.colorsunited.cucompanion.MapMenuActivity" />

        <activity
            android:name="com.colorsunited.cucompanion.TwitchMapActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.colorsunited.cucompanion.MapActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.colorsunited.cucompanion.ZoomActivity"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        
        <activity
            android:name="com.colorsunited.cucompanion.MapPlanActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.colorsunited.cucompanion.MeufloActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.colorsunited.cucompanion.weapons.WeaponActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.colorsunited.cucompanion.weapons.WeaponMenuActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.colorsunited.cucompanion.about.AboutActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.colorsunited.cucompanion.settings.SettingsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.colorsunited.cucompanion.weapons.HelpStatsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.colorsunited.cucompanion.operators.OperatorMenuActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.colorsunited.cucompanion.operators.OperatorActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.colorsunited.cucompanion.chat.MenuChatActivity"
            android:theme="@style/AppTheme"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.colorsunited.cucompanion.chat.MainChatActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.colorsunited.cucompanion.chat.MenuChannelActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.colorsunited.cucompanion.chat.MenuFindTeamActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.colorsunited.cucompanion.chat.TeamActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.colorsunited.cucompanion.chat.MenuFindPlayerActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.colorsunited.cucompanion.chat.PlayerActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.colorsunited.cucompanion.MapPlanDevActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
